/**index.wxss**/
navigator{
  /* 该样式对所有navigator组件起作用 */

  margin: 0px;
  font-size: 20px;
}

.waikuang{
  /* 用于设置某一行的整体布局 */
  display: flex;
  flex-direction: row;
  border: 1px solid rgba(192, 192,192, 0.5);
  margin: 0px;
  padding: 5px 0px;
}

.myleft{
  /* 用于设置某一行左边元素的样式 */
  margin-right: 10px;
}

.mycenter{
  /* 用于设置某一行中间元素的样式 */
  flex: 1;
}

.myright{
  /* 用于设置某一行右边元素的样式 */
  width: 40rpx;
  height: 40rpx;
  margin-top: 5px;
}